    "version": "0.2.0",
    "tasks": [

    ],
    "configurations": [
        {
            "preLaunchTask": "sleep",
            "command": "cargo watch -w server -x 'build -p server'",
            "type": "node-terminal",
            "request": "launch",
            "name": "Watch",
        },
        {
            "cargo": {
                "args": [
                    "build",
                    "-p",
                    "migration-runner",
                    "-p",
                    "server",
                    "-p",
                    "dxp-todo-backend",
                ],
            },
            "type": "lldb",
            "request": "launch",
            "name": "Launch",
        },
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach",
            "program": "${workspaceFolder}/target/debug/dxp-todo-backend",
        },
    ],
    "compounds": [
        {
            "name": "Both",
            "configurations": ["Launch", "Watch"],
            "stopAll": true
        }
    ]
}